
@{
    ViewBag.Title = "Login";
}

    <meta charset="UTF-8">

    <link rel="stylesheet" type="text/css" href="~/Content/main.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/util.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Awesome-Font/css/font-awesome.min.css" />


    <body>

        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100">
                    <div class="login100-pic js-tilt" data-tilt>
                        <img src="~/Imagenes/img-01.png" alt="IMG">
                    </div>

                    <form class="login100-form validate-form">
                        <span class="login100-form-title">
                            Ingresar sesión
                        </span>
                        @using (Html.BeginForm("Confirmar_Login", "User"))
                        {
                            <div class="wrap-input100 validate-input" data-validate="Usuario Requerido">
                                @Html.TextBox("Usuario", null, new { @class = "input100", placeholder = "E-mail del usuario"})
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-envelope" aria-hidden="true"></i>
                                </span>
                            </div>

                            <div class="wrap-input100" data-validate="Contraseña Requerida">
                                @Html.TextBox("Contraseña", null, new { @class = "input100", placeholder = "Contraseña" })
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-lock" aria-hidden="true"></i>
                                </span>
                            </div>

                            <div class="container-login100-form-btn">
                                <input type="submit" value="Ingresar" class="login100-form-btn btn btn-success  " />
                            </div>
                        }
                        <div class="text-center p-t-12">
                            <span class="txt1">
                                Olvido su
                            </span>
                            <a class="txt2">
                                @Html.ActionLink("Contraseña", "Index")
                            </a>
                        </div>

                        <div class="text-center p-t-136">
                            <a class="txt2" href="#">
                                @Html.ActionLink("Nueva Cuenta", "Index")
                                <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </body>     




